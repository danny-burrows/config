set editing-mode vi
set show-mode-in-prompt on
set vi-ins-mode-string "\1\e[1;38;5;251m\2I\1\e[0m\2 "
set vi-cmd-mode-string "\1\e[0;38;5;36m\2C\1\e[0m\2 "

# Remove delay on hitting esc
set keyseq-timeout 0

# optionally:
# switch to block cursor before executing a command
set keymap vi-insert
RETURN: "\e\n"
\C-l: "\eddiclear\n"
